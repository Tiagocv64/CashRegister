<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="To join an existing Shop, go to the Registers tab on a device already registered to the desired shop and press the add button."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/greetings_textView"
        android:gravity="center"
        android:layout_marginTop="3dp" />

    <TextView
        android:text="When prompted, insert this email address:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="email@gmail.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_textView"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:text="When the operation is complete you will automatically have access to the Shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar4"
        android:layout_marginTop="5dp" />

</LinearLayout>