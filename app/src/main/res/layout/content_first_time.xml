<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_first_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.creation.tiagocv.cashregister.firstTimeActivity"
    tools:showIn="@layout/activity_first_time">

    <TextView
        android:text="Welcome to CashRegister,"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/greetings_textView"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="100dp" />

    <TextView
        android:text="or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_below="@+id/create_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />

    <Button
        android:text="Join existing Shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_button"
        android:layout_gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Create new Shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_button"
        android:layout_gravity="center"
        android:layout_below="@+id/name_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="FirstName LastName!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_textView"
        android:layout_below="@+id/greetings_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:textSize="20sp"
        android:layout_marginTop="3dp" />

</RelativeLayout>
